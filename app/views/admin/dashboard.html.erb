<%= link_to 'Create Post', new_post_path, class: 'largeButton' %>

<% if @unpublished_posts.length > 0 %>
	<h2>Drafts</h2>
	<div class="post_table">
		<div class="col-xs-12">
			<div class="post_table">
				<div class="row heading">
					<div class="col-xs-1">
						Date
					</div>
					<div class="col-xs-3">
						Type
					</div>
					<div class="col-xs-4">
						Title
					</div>
					<div class="col-xs-2">
						URL
					</div>
					<div class="col-xs-2">
					</div>
				</div>
				<% @unpublished_posts.each do |post| %>
					<%= render 'admin/post_row', post: post %>
				<% end %>
			</div>
		</div>
	</div>
<% end %>

<% if @published_posts.length > 0 %>
	<h2>Published</h2>
	<div class="post_table">
		<div class="col-xs-12">
			<div class="row heading">
				<div class="col-xs-1">
					Date
				</div>
				<div class="col-xs-3">
					Type
				</div>
				<div class="col-xs-4">
					Title
				</div>
				<div class="col-xs-2">
					URL
				</div>
				<div class="col-xs-2">
				</div>
			</div>
			<% @published_posts.each do |post| %>
				<%= render 'admin/post_row', post: post %>
			<% end %>
		</div>
	</div>
<% end %>

<div class="row">
	<div class="col-xs-6">
		<h2>Tags</h2>
		<%= link_to 'Create Tag', new_tag_path, class: 'largeButton' %>
		<ul class="tags">
			<% @tags.each do |tag| %>
				<li>
					<a href="#" class="tag", style="background-color: <%= tag.color %> ">
						<%= tag.display_name %>
					</a>
					<%= link_to '', edit_tag_path(tag), class: "icon edit" %>
					<%= link_to '', tag, method: :delete,  data: { confirm: 'Are you sure you want to delete this tag?' }, class: "icon trash" %>
					<% if tag.icon != '' %>
						<%= image_tag tag.icon, class: "post_icon" %>
					<% else %>
						<i>No Icon</i>
					<% end %>
				</li>
			<% end %>
		</ul>
	</div>
	<div class="col-xs-6">
		<h2>Portfolios</h2>
		<%= link_to 'Create Portfolio', new_portfolio_path, class: 'largeButton' %>
		<ul>
			<% @portfolios.each do |portfolio| %>
				<li>
				<%= link_to portfolio.name, portfolio %>
				<%= link_to '', edit_portfolio_path(portfolio), class: "icon edit" %>
				<%= link_to '', portfolio, method: :delete,  data: { confirm: 'Are you sure you want to delete this portfolio?' }, class: "icon trash" %>
				</li>
			<% end %>
		</ul>
	</div>
</div>


<a href="/logout" class="largeButton error">Logout</a>